{
  "name": "bulmatic",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2"
  },
  "scripts": {
    "git-commit": "git add -A && git commit -m '-' && git push",
    "goto-github": "open https://github.com/meg768/bulmatic",
    "goto-npm": "open https://www.npmjs.com/package/bulmatic",
    "npm-publish": "npm run transpile && npm run styleguide-publish && npm run npm-increase-version && npm run git-commit && npm publish",
    "npm-increase-version": "npm version patch --no-git-tag-version",
    "styleguide-server": "npx styleguidist server",
    "styleguide-publish": "npm run styleguide-build && gh-pages -d styleguide",
    "styleguide-build": "npx styleguidist build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "react-styleguidist": "^11.1.5"
  }
}
